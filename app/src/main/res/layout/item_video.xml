<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_video_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_video_black"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/item_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="18sp"
        android:text="视频名称"
        android:layout_toRightOf="@id/item_video_iv"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/item_video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="12sp"
        android:text="发布时间"
        android:layout_toRightOf="@id/item_video_iv"
        android:layout_below="@id/item_video_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/item_video_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="13sp"
        android:text="学习次数"
        android:layout_toRightOf="@id/item_video_iv"
        android:layout_below="@id/item_video_time"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>



</RelativeLayout>