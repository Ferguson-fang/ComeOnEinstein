<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/phoneNumber_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@mipmap/register_back"
        app:title="@string/phoneNumber_login"
        app:titleTextColor="#000"
        app:titleMarginStart="100dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E2E2E2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="+86"
            android:textColor="#000"
            android:textSize="24sp"
            android:padding="15dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:background="#4BF6EFEF"
            android:textColorHint="#A8A8A8">
            <EditText
                android:id="@+id/phoneNumberLogin_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#000"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="2dp"/>
        <ImageView
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:background="#E2E2E2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="#000"
            android:textSize="24sp"
            android:padding="15dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入6-16位密码"
            android:background="#4BF6EFEF"
            android:textColorHint="#A8A8A8">
            <EditText
                android:id="@+id/phoneNumberLogin_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#000"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="2dp"/>
        <ImageView
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:background="#E2E2E2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <Button
            android:id="@+id/phoneNumberLogin_loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/register_btn"
            android:text="登录"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4BF6EFEF"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="#A8A8A8"
            android:id="@+id/phoneNumberLogin_checkbox"
            android:theme="@style/MyCheckBox"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4BF6EFEF"
        android:paddingLeft="15dp">
        <Button
            android:id="@+id/phoneNumberLogin_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="遇到问题？"
            android:textColor="#848484"
            android:background="#00000000"/>
        <Button
            android:id="@+id/phoneNumberLogin_SMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:text="短信登录"
            android:background="#00000000"
            android:textColor="#0019FF"/>
    </LinearLayout>

</LinearLayout>